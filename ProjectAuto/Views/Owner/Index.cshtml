@model IEnumerable<ProjectAuto.Models.Owner>


@{
    ViewBag.Title = "Owner list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateEditOwner") |
    @Html.ActionLink("Cars", "Index", "Home", null, null)
</p>
<table class="table">
    <tr>
        <th>
           First name
        </th>
        <th>
           Second name
        </th>
        <th>
           Year of birth
        </th>
        <th>
           Driver expirience
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecondName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearOfBirth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DriverExpirience)
        </td>
        <td>
            @Html.ActionLink("Edit", "CreateEditOwner", new { id=item.ID }) |
            @Html.ActionLink("Add car", "CarList", new { id = item.ID }) |
            @Html.ActionLink("Car list", "OwnerCarList", new { id=item.ID }) |
            @Html.ActionLink("Delete", "DeleteOwner", new { id=item.ID }) 
            
        </td>
    </tr>
}

</table>
